<Window x:Class="Cats.AddTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cats"
        mc:Ignorable="d"
        Title="AddWindow" Height="150" Width="300"
        ResizeMode="NoResize"
        SizeToContent="Height" Icon="/Windows/icons8-cat-footprint-100.ico"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Orientation="Vertical">
            <Label Content="Title" FontSize="10"></Label>
            <TextBox x:Name="TitleTb" Width="265"/>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="25" Grid.Row="1">
            <Button x:Name="OkBtn" Content="Ok" Padding="10 0" Click="OkBtn_Click"/>
            <Button x:Name="RequestBtn" Content="Request" Padding="10 0" Click="OkBtn_Click" Visibility="Collapsed"/>
            <Button x:Name="CancelBtn" Content="Cancel" Margin="10 0 0 0" Padding="10 0" Click="CancelBtn_Click"/>
        </WrapPanel>
    </Grid>
</Window>
