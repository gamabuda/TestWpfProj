<Window x:Class="BooksProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksProj"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Grid.Row="0" Margin="20 2" Width="150" Click="TableBTN">Таблица книг</Button>
            <Button Grid.Row="0" Margin="20 2" Width="150" x:Name="genresBTN" Click="GenresBTN">Жанры</Button>
            <Button Grid.Row="0" Margin="20 2" Width="150" x:Name="profileBTN" Click="ProfileBTN">Профиль</Button>
            <Button Grid.Row="0" Margin="20 2" Width="150" Click="MenuBTN">Меню входа</Button>
        </StackPanel>

        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="5"></Frame>
    </Grid>
</Window>
