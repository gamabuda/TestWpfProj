<Page x:Class="BooksProj.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BooksProj.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <StackPanel>
            <WrapPanel Orientation="Vertical">
                <Label FontSize="18">Login</Label>
                <Label FontSize="18" Content="{Binding Login}"></Label>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Label FontSize="18" Content="Password"/>
                <Label FontSize="18" Content="{Binding Password}"/>
            </WrapPanel>
        </StackPanel>

        <Button Height="50" FontSize="18" Margin="10,390,586,10" Click="ProfileEditBTN">Редактировать</Button>
    </Grid>
</Page>
