<Page x:Class="BooksProj.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BooksProj.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <Label Content="Добро пожаловать на страницу аутентификации!"/>


        <Label Content="Введите Ваш логин."/>
        <TextBox x:Name="Login" />

        <Label Content="Введите Ваш пароль." />
        <PasswordBox x:Name="Password" />

        <Label Content=""/>
        <Button x:Name="LoginBtn" Content="Вход" Click="LoginBtn_Click" IsDefault="true" />
    </StackPanel>
</Page>
