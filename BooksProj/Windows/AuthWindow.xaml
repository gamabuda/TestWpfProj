<Window x:Class="BooksProj.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksProj.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="Sign In" MouseDown="Label_MouseDown"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="Sign Up" MouseDown="Label_MouseDown_1"/>
            </StackPanel>
        </Grid>



        <Frame  Grid.Row="1" x:Name="AuthFrame" NavigationUIVisibility="Hidden" Margin="5"/>
    </Grid>
</Window>
