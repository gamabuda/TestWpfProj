<Window x:Class="BooksProj.Windows.AddGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksProj.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление жанра" Height="400" Width="400">
    <Grid>
        <WrapPanel Orientation="Vertical" Margin="145,156,145,156">
            <Label>Введите название</Label>
            <TextBox x:Name="AddGenreTB"></TextBox>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" Width="240" Margin="80,228,80,122">
            <Button Width="120" Click="CancelBTN">Отмена</Button>
            <Button Width="120" Click="SubmitBTN">Добавить</Button>
        </WrapPanel>
    </Grid>
</Window>
