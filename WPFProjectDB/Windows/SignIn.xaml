<Window x:Class="WPFProjectDB.Windows.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProjectDB.Windows"
        mc:Ignorable="d"
        Title="SignIn" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Login"></Label>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>
            <Label Content="Password"></Label>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <Label Content="User name"></Label>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
            <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Right" Width="100"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
