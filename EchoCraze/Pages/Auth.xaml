<Window x:Class="EchoCraze.Pages.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EchoCraze.Pages"
        mc:Ignorable="d"
        Title="Auth" Height="400" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Welcome to the AuthPage!"/>
            <Label Content="Login:"></Label>
            <TextBox x:Name="LoginTB"></TextBox>
            <Label Content="Password:"></Label>
            <TextBox x:Name="PasswordTB"></TextBox>
            <Button x:Name="LoginBtn" Content="Sign In" Click="LoginBtn_Click"/>
            <Button Content="Dont have an account?" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
