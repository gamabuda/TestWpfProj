<Window x:Class="EchoCraze.Pages.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EchoCraze.Pages"
        mc:Ignorable="d"
        Title="Reg" Height="400" Width="450">
    <Grid x:Name="Registration">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Welcome to the RegPage!"/>
            <Label Content="Login:"></Label>
            <TextBox x:Name="LoginTB"></TextBox>
            <Label Content="Password:"></Label>
            <TextBox x:Name="PasswordTB"></TextBox>
            <Button x:Name="RegBtn" Content="Reg" Click="RegBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
