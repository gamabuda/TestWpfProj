<Window x:Class="EchoCraze.Windows.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EchoCraze.Windows"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Border Margin="12" CornerRadius="50">
        <Grid Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="0" CornerRadius="25" Margin="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!--<Image x:Name="ObjectImg" Grid.Row="0"/>
                    <Button x:Name="LoadImgBtn" Grid.Row="1" Content="Load new..." Click="LoadImgBtn_Click"/>-->
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" Grid.Row="0" Margin="15" Orientation="Vertical" VerticalAlignment="Center">
                <WrapPanel>
                    <Label Width="35" Content="Id:"/>
                    <Label  Content="{Binding Id_Melody}"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Width="35" Content="Title:"/>
                    <TextBox x:Name="TitleTextBox" Width="200" Text="{Binding Title}"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Width="35" Content="Type:"/>
                    <TextBox x:Name="TypeTextBox" Width="200" Text="{Binding Genre.Title}"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Width="35" Content="Most_listened_to:"/>
                    <TextBox x:Name="MostTextBox" Width="200" Text="{Binding Most_listened_to}"/>
                    <Label  Content="{Binding Most_listened_to}"/>
                </WrapPanel>
            </StackPanel>

            <Grid Grid.ColumnSpan="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="SaveBtn"   Grid.Column="0" Content="Save" Click="SaveBtn_Click"/>
                <Button x:Name="CloseBtn"  Grid.Column="1" Content="Cancel"/>
            </Grid>

        </Grid>
    </Border>
</Window>
