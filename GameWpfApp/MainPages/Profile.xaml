<Page x:Class="GameWpfApp.MainPages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameWpfApp.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Name:"/>
            <TextBox Name="NameTextBox" Width="200" Margin="5"/>
            <Label Content="Surname:"/>
            <TextBox Name="SurnameTextBox" Width="200" Margin="5"/>
            <Label Content="Login:"/>
            <TextBox Name="LoginTextBox" Width="200" Margin="5"/>
            <Label Content="Password:"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="5"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100" Margin="5"/>
            <Button Content="Logout" Click="LogoutButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>