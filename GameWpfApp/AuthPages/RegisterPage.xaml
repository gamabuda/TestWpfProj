<Page x:Class="GameWpfApp.AuthPages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameWpfApp.AuthPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <TextBlock Text="Registration" TextAlignment="Center" Margin="0,30,0,0" FontSize="36"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBox Margin="12" Background="LightGray" x:Name="NameTb" Text="Name"/>
            <TextBox Margin="12" Background="LightGray" x:Name="SurnameTb" Text="Surname"/>
            <TextBox Margin="12" Background="LightGray" x:Name="LoginTb" Text="Login"/>
            <PasswordBox Margin="12" Background="LightGray" x:Name="PasswordPb" Password="Password" />
            <Button x:Name="RegisterBtn" Margin="12" Content="Register" Click="RegisterBtn_Click"/>
            <Button x:Name="BackBtn" Margin="12" Content="Back to Sign In" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>

</Page>
