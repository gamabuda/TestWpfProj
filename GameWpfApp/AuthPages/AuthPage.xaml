<Page x:Class="GameWpfApp.AuthPages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameWpfApp.AuthPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <TextBlock Text="Authorisation" TextAlignment="Center" Margin="0,35,0,0" FontSize="36"></TextBlock>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBox Margin="12" Background="LightGray" x:Name="LoginTb" Text="Login"/>
            <PasswordBox Margin="12" Background="LightGray" x:Name="PasswordPb" Password="Password" />
            <Button x:Name="AuthBtn" Margin="12" Content="Sign in" Click="AuthBtn_Click"/>
            <Button x:Name="RegisterBtn" Margin="12" Content="Register" Click="RegisterBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
