<Window x:Class="TestWpfProj.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfProj"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="300">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10">
            <StackPanel>
                <!-- Имя кота -->
                <TextBlock x:Name="NameTb" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

                <!-- Фотография кота -->
                <Image x:Name="ImageB" Source="/Default.png" Height="200" Margin="0,10" Stretch="UniformToFill" HorizontalAlignment="Center"/>

                <!-- ID кота -->
                <TextBlock x:Name="IdTb" FontSize="16" HorizontalAlignment="Center" Margin="0,5"/>

                <!-- Дата рождения кота -->
                <TextBlock x:Name="BirthdayTb" FontSize="16" HorizontalAlignment="Center" Margin="0,5"/>

                <!-- Пол кота -->
                <TextBlock x:Name="GenderTb" FontSize="16" HorizontalAlignment="Center" Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
