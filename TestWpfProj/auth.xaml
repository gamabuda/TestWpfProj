<Window x:Class="TestWpfProj.auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfProj"
        mc:Ignorable="d"
        Title="auth" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="UsernameTextBox" Margin="5" />
            <TextBox x:Name="PasswordTextBox" Margin="5"  />
            <Button x:Name="LoginButton" Content="Login" Margin="5" Click="LoginButton_Click" />
            <Button x:Name="RegisterButton" Content="Register" Margin="5" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>
